#include <iostream>
#include <windows.h>
#include <string>
#include <fstream>

using namespace std;

string create() {
    string name;
    string s;
    cout << "Название файла : ";
    getline(cin, name);
    name = name + ".txt";
    cout << "Текст: ";
    getline(cin, s);
    ofstream fout(name);
    fout << s;
    fout.close();
    ifstream fin(name);
    if (!fin.is_open()) {
        cout << "\n Не удалось открыть файл.";
    }
    else {
        string stroka;
        getline(fin, stroka);
        fin.close();
    }
    return name;
}

void main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    char a;
    string name;
    name = create();
    ifstream inFile(name);
    if (!inFile.is_open()) {
        cout << "Ошибка открытия файла... \n";
    }
    else {
        string symb, b = "";
        for (inFile >> a; !inFile.eof(); inFile >> a) {
            symb += a;
        }
        symb += "a";
        for (int i = 0; i < size(symb); ++i) {
            if (isdigit((unsigned char)symb[i])) {
                b += symb[i];
            }

            else if (!isdigit((unsigned char)symb[i]) && b != "") {
                cout << stoi(b) << endl;
                b = "";
            }
        }
    }
}
